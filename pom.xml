  <modelVersion>4.0.0</modelVersion>
  <groupId>com</groupId>
  <artifactId>omSSH</artifactId>
  <packaging>war</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>omSSH Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>
<!-- Junit -->
        <dependency>
            <groupId>junit</groupId>
